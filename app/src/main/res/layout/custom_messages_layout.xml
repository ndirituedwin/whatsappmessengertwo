<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/message_profile_image"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/profile_image"/>

    <TextView
        android:id="@+id/receiver_messages"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
         android:padding="1dp"
        android:textColor="#2196F3"
        android:text="Receiver messages here"
        android:layout_toEndOf="@+id/message_profile_image"
        android:layout_toRightOf="@+id/message_profile_image"
        android:background="@drawable/receiver_messages_layout"/>

    <ImageView
        android:id="@+id/message_sender_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="13dp"
        android:layout_marginRight="50dp"
        android:layout_alignParentRight="true"
         android:scaleType="centerCrop"
        />
    <TextView
        android:id="@+id/message_sender_textview"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/message_sender_image"
        android:layout_marginTop="0dp"
        android:layout_marginRight="50dp"
        android:layout_alignParentRight="true"
        />

    <ImageView
        android:id="@+id/message_receiver_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="13dp"
        android:layout_marginLeft="50dp"
        android:layout_alignParentLeft="true"
        android:scaleType="centerCrop"
        />
    <TextView
        android:id="@+id/message_receiver_textview"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/message_receiver_image"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="50dp"
        android:layout_alignParentLeft="true"
        />
    <TextView
        android:id="@+id/sender_messages"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="@+id/receiver_messages"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:text="Sender messages"
        android:textColor="#D53728"
        android:padding="3dp"
        android:background="@drawable/sebder_messages_layout"
        android:layout_toLeftOf="@+id/sender_profile_image" />
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/sender_profile_image"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:src="@drawable/profile_image"/>

</RelativeLayout>